<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity2_VLAV">

    <ListView
        android:id="@+id/listaNumeros_VLAV"
        android:layout_width="270dp"
        android:layout_height="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAgregar_VLAV" />

    <EditText
        android:id="@+id/numero_VLAV"
        android:layout_width="215dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Ingresa Numero"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAgregar_VLAV"
        android:layout_width="158dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:onClick="Agregar_VLAV"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero_VLAV" />

    <Button
        android:id="@+id/buttonCerrar_VLAV"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:onClick="Cerrar_VLAV"
        android:text="Cerrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaNumeros_VLAV" />

</androidx.constraintlayout.widget.ConstraintLayout>