<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/siguiente_VLAV"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:onClick="Seguir_VLAV"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listaRecuperada_VLAV"
        android:layout_width="78dp"
        android:layout_height="407dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/siguiente_VLAV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.296" />

    <Button
        android:id="@+id/btn_Mostrar_VLAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:onClick="Mostrar_VLAV"
        android:text="Mostrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaRecuperada_VLAV"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listaIndice_VLAV"
        android:layout_width="111dp"
        android:layout_height="402dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toTopOf="@+id/siguiente_VLAV"
        app:layout_constraintEnd_toStartOf="@+id/listaRecuperada_VLAV"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.256" />

    <ListView
        android:id="@+id/listaOrdenar_VLAV"
        android:layout_width="113dp"
        android:layout_height="403dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/listaIndice_VLAV"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_Ordenar_VLAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:onClick="Ordenar_VLAV"
        android:text="Ordenar"
        app:layout_constraintBottom_toTopOf="@+id/siguiente_VLAV"
        app:layout_constraintEnd_toStartOf="@+id/btn_Mostrar_VLAV"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaOrdenar_VLAV"
        app:layout_constraintVertical_bias="0.677" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="157dp"
        android:layout_height="118dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Visualizacion del vector Ordenado usando el vector indice."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="108dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="Vector Indices"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="102dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="Vector Original"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>